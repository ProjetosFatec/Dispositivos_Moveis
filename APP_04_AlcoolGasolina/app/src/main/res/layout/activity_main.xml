            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.72"
            app:layout_constraintHorizontal_bias="0.538"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button" tools:layout_editor_absoluteY="431dp"
            tools:layout_editor_absoluteX="169dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editTextTextPersonName" tools:layout_editor_absoluteY="342dp"
            tools:layout_editor_absoluteX="112dp"/>
    <EditText
            android:layout_width="wrap_content"
